<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.lisixing.ProBarView.widget.ProgressBar.RectProBarView
        android:id="@+id/rectProBarView"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="236dp"
        app:DefaultProgress="50"
        app:FillBarColor="@color/black"
        app:IsHorizontal="true"
        app:Reverse="false"
        app:MaxProgress="100"
        app:ProBarColor="@android:color/holo_blue_bright"
        app:Radius="5dp"
        app:StrokeColor="@android:color/holo_green_light"
        app:StrokeWidth="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectProBarView" />

    <com.lisixing.ProBarView.widget.ProgressBar.CircleProBarView
        android:id="@+id/circleProBarView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="48dp"
        app:CircleWidth="10dp"
        app:DefaultProgress="50"
        app:FillBarColor="@color/black"
        app:MaxProgress="100"
        app:ProBarColor="@android:color/holo_blue_bright"
        app:Reverse="true"
        app:StrokeColor="@android:color/holo_green_light"
        app:StrokeWidth="5dp"
        app:TextColor="@color/black"
        app:TextSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />
</androidx.constraintlayout.widget.ConstraintLayout>